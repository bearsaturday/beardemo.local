{
    "name": "bearsaturday/beardemo.local",
    "description": "bear.demo for BEAR Saturday",
    "keywords": [
        "framework",
        "BEAR.Saturday",
        "demo"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "bearsaturday/bearsaturday": "0.10.x-dev"
    },
    "config": {
        "secure-http": false
    },
    "autoload": {
    },
    "repositories": [
        {
            "type": "pear",
            "url": "https://pear.php.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "include-path": [
        "./"
    ],
    "scripts": {
        "setup": "mysql -u root bear_demo < data/entries.sql",
        "serve": "php -dzend_extension=xdebug.so -d include_path=`pwd` -S 127.0.0.1:8080 -t htdocs/",
        "cs": [
            "php-cs-fixer fix -v --dry-run",
            "phpcs --standard=phpcs.xml src;"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v",
            "phpcbf src tests"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "tests": [
            "@cs",
            "phpmd src text ./phpmd.xml",
            "phpstan analyse src App -c phpstan.neon --no-progress",
            "@test"
        ]
    }
}
